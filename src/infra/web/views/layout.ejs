<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Env Team Vault</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1 class="logo">
                <a href="/">🔐 Env Team Vault</a>
            </h1>
            <% if (typeof user !== 'undefined' && user) { %>
                <nav class="nav">
                    <a href="/profile" class="user-info">Welcome, <%= user.name %></a>
                    <form action="/logout" method="POST" class="logout-form">
                        <button type="submit" class="btn btn-secondary">Logout</button>
                    </form>
                </nav>
            <% } %>
        </div>
    </header>

    <% if (typeof user !== 'undefined' && user) { %>
    <nav class="bg-white shadow-sm border-b">
        <div class="container mx-auto px-4">
            <div class="flex space-x-8">
                <a href="/" class="<%= (typeof currentPage !== 'undefined' && currentPage === 'apps') ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %> whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors">
                    📱 Applications
                </a>
                <a href="/teams" class="<%= (typeof currentPage !== 'undefined' && currentPage === 'teams') ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %> whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors">
                    👥 Team
                </a>
                <a href="/profile" class="<%= (typeof currentPage !== 'undefined' && currentPage === 'profile') ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %> whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors">
                    ⚙️ Profile
                </a>
            </div>
        </div>
    </nav>
    <% } %>

    <main class="main">
        <div class="container">
            <%- body %>
        </div>
    </main>

    <script>
      function copySetupCommand(token) {
        const command = `echo \"API_TOKEN=${token}\" > ~/.env-team-vaultrc`;
        navigator.clipboard.writeText(command).then(() => {
          alert('Setup command copied to clipboard!');
        }).catch(err => {
          console.error('Failed to copy setup command:', err);
        });
      }

      document.addEventListener('DOMContentLoaded', function() {
        // Add event listeners and basic interactivity here
      });
    </script>
</body>
</html>
