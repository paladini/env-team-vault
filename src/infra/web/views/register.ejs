
<div class="min-h-screen flex flex-col justify-center items-center bg-gray-50 dark:bg-gray-900 px-4">
  <div class="w-full max-w-md bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8">
    <div class="flex flex-col items-center mb-6">
      <div class="w-14 h-14 flex items-center justify-center rounded-full bg-blue-600 text-white text-3xl font-bold mb-2 shadow">
        <i class="fa-solid fa-vault"></i>
      </div>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-1">Create your account</h2>
      <p class="text-gray-500 dark:text-gray-300 text-sm">Join Env Team Vault and start managing environment variables</p>
    </div>

    <% if (error) { %>
      <div class="flex items-center bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <i class="fa-solid fa-circle-exclamation mr-2"></i>
        <span class="block"><%= error %></span>
      </div>
    <% } %>

    <form action="/register" method="POST" class="space-y-5">
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Full name</label>
        <input type="text" id="name" name="name" required placeholder="John Doe"
          class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white transition" />
      </div>
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Email address</label>
        <input type="email" id="email" name="email" required placeholder="you@company.com"
          class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white transition" />
      </div>
      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Password</label>
        <input type="password" id="password" name="password" required minlength="6" placeholder="At least 6 characters"
          class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white transition" />
      </div>
      
      <!-- Team Options -->
      <div class="border border-gray-300 dark:border-gray-600 rounded-lg p-4">
        <div class="flex items-center space-x-4 mb-3">
          <input type="radio" id="createTeam" name="teamOption" value="create" checked 
                 onchange="toggleTeamOptions()" class="text-blue-600 focus:ring-blue-500">
          <label for="createTeam" class="text-sm font-medium text-gray-700 dark:text-gray-200">Create new team</label>
          
          <input type="radio" id="joinTeam" name="teamOption" value="join" 
                 onchange="toggleTeamOptions()" class="text-blue-600 focus:ring-blue-500">
          <label for="joinTeam" class="text-sm font-medium text-gray-700 dark:text-gray-200">Join existing team</label>
        </div>
        
        <div id="createTeamSection">
          <label for="teamName" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Team name</label>
          <input type="text" id="teamName" name="teamName" placeholder="Your team or company name"
            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white transition" />
          <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">You'll be the first member of this team</p>
        </div>
        
        <div id="joinTeamSection" class="hidden">
          <label for="teamCode" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Team code</label>
          <input type="text" id="teamCode" name="teamCode" placeholder="Enter 6-character team code (e.g., ABC123)"
                 maxlength="6" style="text-transform: uppercase"
            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white transition" />
          <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Ask your team admin for the team code</p>
        </div>
      </div>
      
      <button type="submit"
        class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 text-lg transition">Create account</button>
    </form>

<script>
function toggleTeamOptions() {
  const createOption = document.getElementById('createTeam');
  const createSection = document.getElementById('createTeamSection');
  const joinSection = document.getElementById('joinTeamSection');
  const teamNameInput = document.getElementById('teamName');
  const teamCodeInput = document.getElementById('teamCode');
  
  if (createOption.checked) {
    createSection.classList.remove('hidden');
    joinSection.classList.add('hidden');
    teamNameInput.required = true;
    teamCodeInput.required = false;
    teamCodeInput.value = '';
  } else {
    createSection.classList.add('hidden');
    joinSection.classList.remove('hidden');
    teamNameInput.required = false;
    teamCodeInput.required = true;
    teamNameInput.value = '';
  }
}

// Auto-uppercase team code input
document.getElementById('teamCode').addEventListener('input', function(e) {
  e.target.value = e.target.value.toUpperCase();
});
</script>

    <div class="mt-6 text-center text-sm text-gray-500 dark:text-gray-300">
      Already have an account?
      <a href="/login" class="text-blue-600 hover:text-blue-800 font-medium">Sign in here</a>
    </div>
  </div>
</div>
